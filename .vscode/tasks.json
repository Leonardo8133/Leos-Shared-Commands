{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$tsc"
        },
        {
            "type": "npm",
            "script": "watch",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$tsc-watch"
        },
        {
            "type": "npm",
            "script": "watch:all",
            "isBackground": true,
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": ["$tsc-watch", "$less-watch"]
        }
    ]
}

